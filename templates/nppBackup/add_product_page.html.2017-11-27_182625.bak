<!DOCTYPE html>
<html>
<head>
	<title>Add Product page</title>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
	<script src="static/js/add_product_page.js"></script> 
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
   <script src="static/js/w3.js"></script>
   <script>
 
   </script>
</head>
<body onload="fetch1()">
		<div w3-include-html={{ url_for('header') }} ></div>
		<form role="form" action= "{{ url_for('add_product')}}" method="POST"  >
		
		<div class="form-group">
		<label class="col-xs-3 control-label"> Category</label><div class="col-xs-5 selectContainer"><select name="category" id="category" class="form-control" onchange="fetch2()"></select></div></br></br>
		</div>
		<div class="form-group">
		<label class="col-xs-3 control-label">Sub Category</label><div class="col-xs-5 selectContainer"><select name="sub_category" class="form-control" id="sub_category" onchange="fetch3()"></select></div></br></br>
		</div>
		<div class="form-group">
		<label class="col-xs-3 control-label">Name</label><div class="col-xs-5 selectContainer"><input class="form-control" type="text" name="name" /></div></br></br>
		</div>
		<div class="form-group">
		<label class="col-xs-3 control-label"> Price</label><div class="col-xs-5 selectContainer"><input class="form-control" type="text" name="price" /></div></br></br>
		</div>
		<div class="form-group">
		<label class="col-xs-3 control-label">GST</label><div class="col-xs-5 selectContainer"><input class="form-control" type="text" name="gst" /></div></br></br>
		</div>
		<div class="form-group">
		<label class="col-xs-3 control-label">Base Margin</label><div class="col-xs-5 selectContainer"><input class="form-control" type="text" name="base_margin" /></div></br></br>
		</div>
		<div class="form-group">
		<label class="col-xs-3 control-label">Sale Price</label><div class="col-xs-5 selectContainer"><input class="form-control" type="text" name="sale_price" /></div></br></br>
		</div>
		<div class="form-group">
		<label class="col-xs-3 control-label"> Suppplier</label><div class="col-xs-5 selectContainer"><select class="form-control" name="supplier_alt" id="supplier_alt"></select></div></br></br></br>
		</div>
		<input type="hidden" value="" name="supplier" id="supplier"/>
		<div class="form-group">
		<input class="btn btn-dark" style="position:absolute;right:460px;" type="submit" value="ADD SUPPLIER">
		</form>
		</br></br></br>
		
		<div w3-include-html={{ url_for('footer') }}></div>
		<script>
		w3.includeHTML();
		</script>
</body>
</html>