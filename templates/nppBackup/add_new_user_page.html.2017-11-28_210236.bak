<body>
<div w3-include-html={{ url_for('header') }}></div>
<div class="center">	
<form id = "form" onsubmit="return checkForm();" action="{{ url_for('add_user_request') }}" method="POST">
<div class="abc">
<div class="container">
  <form class="form-horizontal" action="/action_page.php">
    <div class="form-group">
	<label class="control-label col-sm-2"><font color="white"> Username: </font></label> 
         <div class="col-sm-3">
         <input type="text" class="form-control" name="username"  placeholder="Username" id="username" />
         </div>
        </br></br>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2"><font color="white"> Password: </font></label>
        <div class="col-sm-3"> 
        <input type="password" class="form-control" name="password" placeholder="Password" id="password" />
        </div>
        </br></br>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2"><font color="white"> Confirm Password: </font></label>
        <div class="col-sm-3">
        <input type="password" class="form-control" name="re_password" placeholder="Password" id="re_password" />
        </div>
        </br></br>
    </div>

   <div class="form-group">        
      <div class="col-sm-offset-500 col-sm-10">
        <button type="submit" class="btn brn-indigo btn-default navbar-btn btn-lg"> ADD </button>
      </div>
   </div>
	
</form>
</div>
